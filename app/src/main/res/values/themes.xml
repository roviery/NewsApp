<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryContainer">@color/light_blue</item>
        <item name="colorOnPrimaryContainer">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryContainer">@color/light_blue</item>
        <item name="colorOnSecondaryContainer">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="textAppearanceDisplaySmall">@style/TextAppearance.NewsApp.DisplaySmall</item>
    </style>

    <style name="TextAppearance.NewsApp.DisplaySmall" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>